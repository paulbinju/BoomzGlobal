@model IEnumerable<BoomzGlobal.Models.City_T>
            
@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Grocery, Food and Goods Delivery Management Web Application. Designed and Developed by BoomMaker">
    <meta name="author" content="Binju Paul">
    <meta name="keyword" content="Delivery Manager, App, Web Application, Software">
    <link rel="shortcut icon" href="img/favicon.png">
    <title>Boomz</title>

    <script src="~/js/jquery-1.8.3.min.js"></script>
    <!-- Bootstrap core CSS -->
    <script src="~/js/jquery.dcjqaccordion.2.7.min.js"></script>

    <script src="~/js/jquery.scrollTo.min.js"></script>
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="~/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="~/css/style.css" rel="stylesheet">
    <link href="~/css/style-responsive.css" rel="stylesheet" />
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
    <!--[if lt IE 9]>
      <script src="~/js/html5shiv.js"></script>
      <script src="~/js/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <section id="container" class="">
        <!--header start-->
        @Html.Partial("_Header")
        <!--header end-->
        <!--sidebar start-->
        <aside>
            @Html.Partial("_Menu")
        </aside>
        <!--sidebar end-->
        <!--main content start-->
        <section id="main-content">
            <section class="wrapper">
                <!-- page start-->

                <div class="row" style="min-height:600px;">
                    <div class="col-lg-12">
                        <section class="panel">
                            <header class="panel-heading">
                               CITY
                                <button id="add" class="btn btn-danger btn-xs pull-right"><i class="fa fa-plus"></i> Add City</button>
<br />
                            </header>
                            
                                
                            
                            <script>
                                $(document).ready(function () {
                                    $("#addform,.editrow").hide();
                                    $("#add").click(function () {
                                        $("#addform").show(2000);
                                    });


                                });
                                function openrow(row) {
                                    $("#edit-" + row).show(2000);

                                }
                            </script>

                            <div id="addform" style="height:200px; width:100%;padding:25px; ">

                                @using (Html.BeginForm("Create", "City"))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true)

                                    <div class="col-lg-8 pull-left">
                                        Country <br />
                                        @Html.DropDownList("CountryID", String.Empty)<br />
                                        
                                        City<br />
                                        <input type="text" name="City" class="form-control cke_required" /><br />

                                        
                                         
                                         
                                    </div>
                                    <br />
                                    <input type="submit" name="submit" class="btn btn-warning" value="Save" />
                                }
                            </div>

                            <table class="table table-striped table-advance table-hover">
                                <thead>
                                    <tr>
                                        <th><i class="fa fa-sort"></i> Country</th>
                                        <th><i class="fa fa-sort"></i> City</th>
                                       
                                        <th>Modify</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @item.Country_T.Country

                                            </td>
                                            <td>
                                                @item.City
                                            </td>
                                             

                                            <td>

                                                <button onclick="openrow(@item.CityID)" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></button>

                                            </td>
                                        </tr>
                                        using (Html.BeginForm("Edit", "City"))
                                        {
                                            @Html.AntiForgeryToken()
                                            @Html.ValidationSummary(true)
                                            <tr id="edit-@item.CityID" class="editrow">
                                                <td>
                                                    @Html.DropDownList("CountryID", String.Empty)
                                                </td>
                                                <td>

                                                    <input class="form-control cke_required" type="text" name="City" value="@item.City" />
                                                    <input  type="hidden" name="CityID" value="@item.CityID" />
                                                    </td>
                                                
                                                <td>

                                                    <button class="btn btn-danger btn-xs"><i class="fa fa-pencil"></i> Update</button>

                                                </td>
                                            </tr>
                                        }

                                    }
                                </tbody>
                            </table>
                        </section>
                    </div>
                </div>
                <!-- page end-->
            </section>
        </section>
        <!--main content end-->
        <!--footer start-->
        <footer class="site-footer">
            <div class="text-center">
                
                <a href="#" class="go-top">
                    <i class="fa fa-angle-up"></i>
                </a>
            </div>
        </footer>
        <!--footer end-->
    </section>
    <!-- js placed at the end of the document so the pages load faster -->
    <script src="~/js/jquery.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="~/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="~/js/jquery.scrollTo.min.js"></script>
    <script src="~/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="~/js/respond.min.js"></script>
    <!--common script for all pages-->
    <script src="~/js/common-scripts.js"></script>
    <script>
    $("select").addClass("form-control");
    </script>
</body>
</html>
